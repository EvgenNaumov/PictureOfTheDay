<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition

        app:constraintSetStart="@layout/fragment_picture_of_the_day_main"
        app:constraintSetEnd="@layout/fragment_picture_of_the_day"
        app:duration="2000">
        <OnClick app:targetId="@+id/wiki_button"/>

    </Transition>

    <Transition
        app:constraintSetStart="@layout/fragment_picture_of_the_day"
        app:constraintSetEnd="@layout/fragment_picture_of_the_day_main"
        app:duration="2000">
        <OnSwipe
            app:touchAnchorId="@+id/input_edit_text"
            app:touchAnchorSide="left"
            app:dragDirection="dragEnd"
            app:dragScale="@integer/material_motion_duration_long_1"
            app:maxVelocity="@integer/material_motion_duration_long_1"
            />

    </Transition>

</MotionScene>
