<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/transition_image_mars"
        app:constraintSetStart="@id/start_image"
        app:constraintSetEnd="@id/end_image"
        app:duration="6000"
        app:motionInterpolator="linear">
        <OnClick app:targetId="@+id/tabLayout_mars" app:clickAction="transitionToEnd"/>
    </Transition>

    <ConstraintSet android:id="@+id/start_image">
        <Constraint
            android:id="@+id/image_mars_m"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintBottom_toBottomOf="parent"

            />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end_image">
        <Constraint
            android:id="@+id/image_mars_m"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintTop_toTopOf="parent"
            />

    </ConstraintSet>

</MotionScene>
