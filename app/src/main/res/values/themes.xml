<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PictureOfTheDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:navigationBarColor">@color/red_500</item>
        <item name="colorPrimary">?colorPrimaryTheme</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/red_100</item>
        <item name="colorOnPrimaryContainer">@color/red_900</item>
        <item name="colorPrimaryInverse">@color/red_200</item>

        <item name="colorSecondary">?colorSecondaryTheme</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/red_100</item>
        <item name="colorOnSecondaryContainer">@color/red_900</item>

        <item name="colorTertiary">?colorTertiaryTheme</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/red_100</item>
        <item name="colorOnTertiaryContainer">@color/red_900</item>

        <item name="colorAccent">?colorAccentTheme</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/MyStyle</item>
        <item name="floatingActionButtonStyle">@style/MyStyleFloatingActionButton</item>
        <item name="chipStyle">@style/BaseChipStyle</item>

        <item name="tabStyle">@style/BaseTabStyle</item>

        <item name="textAppearanceBody2">@style/BaseTextAppearance</item>
        <item name="shapeAppearanceSmallComponent">@style/BaseSmallShape</item>
        <item name="shapeAppearanceMediumComponent">@style/MyMediumShape</item>
    </style>

    <style name="Theme.Blue" parent="Theme.PictureOfTheDay">
        <item name="colorPrimaryTheme">@color/theme1_red_purple</item>
        <item name="colorSecondaryTheme">@color/theme1_moderate_pink</item>
        <item name="colorTertiaryTheme">@color/theme1_pink_quartz</item>
        <item name="colorAccentTheme">@color/theme1_eggplant</item>
        <item name="android:statusBarColor">@color/theme1_eggplant</item>

        <item name="android:textAppearance">@style/TextAppearanceThemeOne</item>
        <item name="chipStyleTheme">@style/ThemeOneChipStyle</item>
    </style>

    <style name="Theme.ripple_color" parent="Theme.PictureOfTheDay">
        <item name="colorPrimaryTheme">@color/theme2_orange</item>
        <item name="colorSecondaryTheme">@color/theme2_marsal</item>
        <item name="colorTertiaryTheme">@color/theme2_mint</item>
        <item name="colorAccentTheme">@color/theme2_pink</item>

        <item name="android:textAppearance">@style/TextAppearanceThemeTwo</item>
        <item name="chipStyleTheme">@style/ThemeTwoChipStyle</item>
    </style>

    <style name="Theme.green" parent="Theme.PictureOfTheDay">
        <item name="colorPrimaryTheme">@color/theme3_blue</item>
        <item name="colorSecondaryTheme">@color/theme3_corn</item>
        <item name="colorTertiaryTheme">@color/theme3_purple</item>
        <item name="colorAccentTheme">@color/theme3_green</item>

        <item name="android:textAppearance">@style/TextAppearanceThemeThree</item>
        <item name="chipStyleTheme">@style/ThemeThreeChipStyle</item>
    </style>

</resources>